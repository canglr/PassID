<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383b50"
    tools:context="net.gulernet.app.nxfolder.UiClass.kontrolislemleri">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/AnaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/PinSifreLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#323448"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/PÄ°N"
                    android:textColor="#ecf0f1"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/pinsifre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/pin"
                    android:inputType="numberPassword"
                    android:theme="@android:style/Theme.Holo" />

                <EditText
                    android:id="@+id/pinsifretekrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/pin_again"
                    android:inputType="numberPassword"
                    android:theme="@android:style/Theme.Holo" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/SahtePinLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#323448"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/FAKE_PIN"
                    android:textColor="#ecf0f1"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/sahtepinsifre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/pin"
                    android:inputType="numberPassword"
                    android:theme="@android:style/Theme.Holo" />

                <EditText
                    android:id="@+id/sahtepinsifretekrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/pin_again"
                    android:inputType="numberPassword"
                    android:theme="@android:style/Theme.Holo" />

            </LinearLayout>

            <Button
                android:id="@+id/kontrolileri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/next" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
